{
  "proyecto": {
    "nombre": "Proyecto Aurelion",
    "autor": "Diego Armando Vásquez Chávez",
    "version": "2.2",
    "sprint_actual": 2,
    "fecha_actualizacion": "2025-11-02"
  },
  "datasets": {
    "productos": "datasets/productos.xlsx",
    "clientes": "datasets/clientes.xlsx",
    "ventas": "datasets/ventas.xlsx",
    "detalle_ventas": "datasets/detalle_ventas.xlsx"
  },
  "export": {
    "directory": "export"
  },
  "logs": {
    "directory": "logs"
  },
  "docs": {
    "directory": "docs"
  },
  "periodo_analisis": "12M",
  "rutas_limpias": {
    "productos_limpio": "datasets_limpios/productos_clean.csv",
    "clientes_limpio": "datasets_limpios/clientes_clean.csv",
    "ventas_limpio": "datasets_limpios/ventas_clean.csv",
    "detalle_ventas_limpio": "datasets_limpios/detalle_clean.csv"
  },
  "configuracion_visualizaciones": {
    "directorio": "visualizaciones_EDA",
    "guardar_figuras": true,
    "formato": "png",
    "dpi": 120
  },
